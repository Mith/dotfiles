bindsym $mod+Page_Up          exec pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym $mod+Page_Down        exec pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym $mod+Shift+Page_Up          exec pactl set-sink-volume @DEFAULT_SINK@ +1%
bindsym $mod+Shift+Page_Down        exec pactl set-sink-volume @DEFAULT_SINK@ -1%

# Lockscreen
bindsym $mod+Escape exec swaylock
# Desktop portal
exec /usr/libexec/xdg-desktop-portal -r

exec_always systemctl --user start swaybg

exec nm-applet
exec sh -c 'systemctl --user import-environment; systemctl --user start sway-session.target'
